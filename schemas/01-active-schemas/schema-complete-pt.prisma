  // Five Star Open Data  
  uriRdf                String?       @map("uri_rdf")                   // http://purl.obolibrary.org/obo/MONDO_0005072
  jsonldId              String?       @map("jsonld_id")                 // mondo:0005072
  csvId                 String?       @map("csv_id")                    // MONDO_0005072
  
  // Relacionamentos
  orphaMappings         OrphaExternalMapping[]
  
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt
  
  @@map("mondo_diseases")
}

