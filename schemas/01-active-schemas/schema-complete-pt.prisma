  // Relacionamentos
  orphaMappings         OrphaExternalMapping[]
  
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt
  
  @@map("mesh_descriptors")
}

// =====================================================================================
// MEDDRA - MEDICAL DICTIONARY FOR REGULATORY ACTIVITIES
// =====================================================================================

model MedDRATerm {
  id                    String        @id @default(uuid())
  
  // Identificação MedDRA
  medDRACode            String        @unique @map("meddra_code")       // Ex: "10017374"
  medDRAVersion         String        @map("meddra_version")            // Ex: "25.1"
  
  // Hierarquia MedDRA (SOC > HLGT > HLT > PT > LLT)
  termLevel             String        @map("term_level")                // "SOC", "HLGT", "HLT", "PT", "LLT"
  
  // Nomes multilíngues
  preferredTermEn       String        @map("preferred_term_en")
  preferredTermPt       String?       @map("preferred_term_pt")
  
  // Códigos de relacionamento hierárquico
  socCode               String?       @map("soc_code")                  // System Organ Class
  hlgtCode              String?       @map("hlgt_code")                 // High Level Group Term
  hltCode               String?       @map("hlt_code")                  // High Level Term
  ptCode                String?       @map("pt_code")                   // Preferred Term
  
  // Informações regulatórias
  primarySOC            Boolean       @default(false) @map("primary_soc")
  currentFlag           String?       @map("current_flag")              // "Y", "N"
  
  // Five Star Open Data
  uriRdf                String?       @map("uri_rdf")                   // URI padrão MedDRA
  jsonldId              String?       @map("jsonld_id")                 // meddra:10017374
  csvId                 String?       @map("csv_id")                    // MEDDRA_10017374
  
  // Relacionamentos
  orphaMappings         OrphaExternalMapping[]
  
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt
  
  @@map("meddra_terms")
}

// =====================================================================================
// TABELA DE SINCRONIZAÇÃO ENTRE SISTEMAS
// =====================================================================================

model CrossSystemMapping {
  id                    String        @id @default(uuid())
  
  // Sistemas origem e destino
  sourceSystem          String        @map("source_system")             // "OMIM", "ICD-10", etc.
  sourceId              String        @map("source_id")                 // ID no sistema origem
  targetSystem          String        @map("target_system")             // Sistema destino
  targetId              String        @map("target_id")                 // ID no sistema destino
  
  // Tipo de mapeamento
  mappingType           String        @map("mapping_type")              // "exact", "broader", "narrower", "related"
  mappingConfidence     Float?        @map("mapping_confidence")        // 0.0 - 1.0
  mappingSource         String?       @map("mapping_source")            // "manual", "automatic", "official"
  
  // Validação
  isValidated           Boolean       @default(false) @map("is_validated")
  validatedBy           String?       @map("validated_by")              // User/system que validou
  validationDate        DateTime?     @map("validation_date")
  
  // Metadados
  notes                 String?                                        // Notas sobre o mapeamento
  evidence              String?                                        // Evidência do mapeamento
  
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt
  
  @@unique([sourceSystem, sourceId, targetSystem, targetId])
  @@map("cross_system_mappings")
}
