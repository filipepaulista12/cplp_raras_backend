}

// =====================================================================================
// MONDO - MONARCH DISEASE ONTOLOGY
// =====================================================================================

model MONDODisease {
  id                    String        @id @default(uuid())
  
  // Identificação MONDO
  mondoId               String        @unique @map("mondo_id")          // Ex: "MONDO:0005072"
  mondoCode             String        @map("mondo_code")                // Ex: "0005072"
  
  // Nomes multilíngues
  labelEn               String        @map("label_en")
  labelPt               String?       @map("label_pt")
  synonymsEn            String?       @map("synonyms_en")               // JSON array
  synonymsPt            String?       @map("synonyms_pt")               // JSON array
  
  // Definições
  definitionEn          String?       @map("definition_en")
  definitionPt          String?       @map("definition_pt")
  
  // Hierarquia MONDO
  parentMondoId         String?       @map("parent_mondo_id")
  parent                MONDODisease? @relation("MONDOHierarchy", fields: [parentMondoId], references: [mondoId])
  children              MONDODisease[] @relation("MONDOHierarchy")
  
  // Classificação
  diseaseCategory       String?       @map("disease_category")          // "rare disease", "genetic disease"
