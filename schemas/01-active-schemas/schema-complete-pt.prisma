// =====================================================================================
// ICD-10 & ICD-11 - CLASSIFICAÇÃO INTERNACIONAL DE DOENÇAS (OMS)
// =====================================================================================

model ICDCode {
  id                    String        @id @default(uuid())
  
  // Identificação ICD
  icdCode               String        @unique @map("icd_code")           // Ex: "E84.0", "LD24.61"
  icdVersion            String        @map("icd_version")               // "ICD-10" ou "ICD-11"
  icdRelease            String?       @map("icd_release")               // "2019", "2022"
  
  // Nomes multilíngues
  titleEn               String        @map("title_en")
  titlePt               String?       @map("title_pt")
  
  // Descrições
  definitionEn          String?       @map("definition_en")
  definitionPt          String?       @map("definition_pt")
  
  // Hierarquia ICD
  parentCode            String?       @map("parent_code")
  parent                ICDCode?      @relation("ICDHierarchy", fields: [parentCode], references: [icdCode])
  children              ICDCode[]     @relation("ICDHierarchy")
  
  categoryLevel         Int           @map("category_level")            // 1=Chapter, 2=Block, 3=Category, etc.
  isTerminalCode        Boolean       @default(false) @map("is_terminal_code")
  
  // Informações clínicas
  inclusionTerms        String?       @map("inclusion_terms")           // Termos incluídos
  exclusionTerms        String?       @map("exclusion_terms")           // Termos excluídos
  notes                 String?                                        // Notas clínicas
  
  // Five Star Open Data
  uriRdf                String?       @map("uri_rdf")                   // https://icd.who.int/browse/...
  jsonldId              String?       @map("jsonld_id")                 // icd:E84.0
  csvId                 String?       @map("csv_id")                    // ICD10_E84_0
  
  // Metadados
  whoApprovalStatus     String?       @map("who_approval_status")       // "Approved", "Draft"
  lastRevisionDate      DateTime?     @map("last_revision_date")
  effectiveDate         DateTime?     @map("effective_date")
  
  // Relacionamentos com sistema CPLP
  orphaMappings         OrphaExternalMapping[]
  
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt
  
  @@map("icd_codes")
}

// =====================================================================================
// OMIM - ONLINE MENDELIAN INHERITANCE IN MAN (GENÉTICA MÉDICA)
// =====================================================================================

model OMIMEntry {
  id                    String        @id @default(uuid())
  
  // Identificação OMIM
  omimNumber            String        @unique @map("omim_number")       // Ex: "219700", "607131"
  omimType              String        @map("omim_type")                 // "gene", "phenotype", "gene/phenotype"
  
  // Nomes e títulos
  titleEn               String        @map("title_en")
  titlePt               String?       @map("title_pt")
  alternativeTitles     String?       @map("alternative_titles")
  
  // Descrições detalhadas
  descriptionEn         String?       @map("description_en")
  descriptionPt         String?       @map("description_pt")
  clinicalFeaturesEn    String?       @map("clinical_features_en")
  clinicalFeaturesPt    String?       @map("clinical_features_pt")
  
  // Informações genéticas
  geneSymbol            String?       @map("gene_symbol")
  geneLocation          String?       @map("gene_location")              // Ex: "7q31.2"
  inheritancePattern    String?       @map("inheritance_pattern")
  inheritancePatternPt  String?       @map("inheritance_pattern_pt")
  
  // Mapeamentos moleculares
  molecularBasis        String?       @map("molecular_basis")
  alleleVariants        String?       @map("allele_variants")
  
  // Status e classificação
  entryStatus           String        @map("entry_status")              // "live", "moved", "removed"
  confidenceLevel       String?       @map("confidence_level")          // "confirmed", "provisional"
  
  // Five Star Open Data
  uriRdf                String?       @map("uri_rdf")                   // https://omim.org/entry/219700
  jsonldId              String?       @map("jsonld_id")                 // omim:219700
  csvId                 String?       @map("csv_id")                    // OMIM_219700
  
  // Datas importantes
  creationDate          DateTime?     @map("creation_date")
  editDate              DateTime?     @map("edit_date")
  
  // Relacionamentos
  orphaMappings         OrphaExternalMapping[]
  
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt
  
  @@map("omim_entries")
}

// =====================================================================================
