# üóÑÔ∏è CONFIGURA√á√ÉO DO BANCO DE DADOS ORPHANET
# ==========================================

# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=orphanet_db
DB_SSL=false

# Configura√ß√µes de Import
IMPORT_BATCH_SIZE=1000
IMPORT_MAX_RETRIES=3
IMPORT_TIMEOUT_MS=30000
IMPORT_LANGUAGES=en,pt

# Configura√ß√µes de Cache
CACHE_DOWNLOADS=true
CACHE_DIR=./database/cache
CACHE_TTL_HOURS=24

# Configura√ß√µes de Log
LOG_LEVEL=info
LOG_FILE=./database/logs/orphanet.log
LOG_MAX_SIZE=10MB

# URLs Base Orphadata (N√ÉO MODIFICAR)
ORPHADATA_BASE_URL=https://sciences.orphadata.com/
ORPHACODE_BASE_URL=https://www.orphacode.org/
ORPHADATA_API_URL=https://api.orphacode.org/

# Configura√ß√µes de Valida√ß√£o
VALIDATE_XML_SCHEMA=true
VALIDATE_DATA_INTEGRITY=true
GENERATE_REPORTS=true
SKIP_EXISTING_RECORDS=true

# Configura√ß√µes de Performance
MAX_CONCURRENT_DOWNLOADS=5
CONNECTION_POOL_SIZE=10
QUERY_TIMEOUT_MS=30000
ENABLE_QUERY_LOGGING=false

# Configura√ß√µes de Backup
AUTO_BACKUP_BEFORE_IMPORT=true
BACKUP_DIR=./database/backups
KEEP_BACKUPS_DAYS=30

# Configura√ß√µes de Monitoramento
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_PORT=8080
