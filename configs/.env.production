# SERVIDOR DE PRODUÇÃO - CPLP RARAS
# ====================================

# Database MySQL/PostgreSQL
DATABASE_URL="mysql://usuario:senha@seu-servidor.com:3306/cplp_raras"
# OU PostgreSQL: "postgresql://usuario:senha@seu-servidor.com:5432/cplp_raras"

# Configurações de produção
NODE_ENV=production
IMPORT_BATCH_SIZE=5000
IMPORT_MAX_RETRIES=5
IMPORT_TIMEOUT_MS=60000

# API Settings
API_BASE_URL=https://raras-cplp.org
CORS_ORIGIN=https://raras-cplp.org

# Cache Settings
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Monitoring
LOG_LEVEL=info
ENABLE_METRICS=true

# Backup Settings
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
