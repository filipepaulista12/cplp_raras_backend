{
  "name": "cplp-raras-backend",
  "version": "1.0.0",
  "description": "Backend dedicado para banco de dados CPLP-Raras (DoenÃ§as Raras)",
  "main": "index.js",
  "scripts": {
    "dev": "npx nest start --watch",
    "start:dev": "npx nest start --watch",
    "start": "node dist/main",
    "start:prod": "npm run build && npm start",
    "build": "tsc -p tsconfig.build.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio",
    "prisma:reset": "echo 'COMANDO BLOQUEADO - Use setup:mysql-full para reconfigurar' && exit 1",
    "mysql:setup": "powershell -ExecutionPolicy Bypass -File scripts/setup-mysql.ps1",
    "mysql:sync": "node scripts/sync-mysql-dumps.js",
    "mysql:verify": "mysql -u root -ppassword -D cplp_raras -e \"SELECT TABLE_NAME, TABLE_ROWS FROM information_schema.tables WHERE TABLE_SCHEMA='cplp_raras';\"",
    "setup:mysql-full": "npm run mysql:setup",
    "setup:mysql-sync": "npm run mysql:sync",
    "setup:mysql-verify": "npm run mysql:verify",
    "backup": "node scripts/backup-database.js",
    "restore": "node scripts/restore-database.js",
    "analyze": "node relatorios/ultimate-final-report.js",
    "check": "node relatorios/check-tables-simple.js",
    "test:connection": "node scripts/test-database-connection.js"
  },
  "keywords": [
    "rare-diseases",
    "orphanet",
    "hpo",
    "gard",
    "drugbank",
    "cplp",
    "portuguese",
    "medical-database"
  ],
